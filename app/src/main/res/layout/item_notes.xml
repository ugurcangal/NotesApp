<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070"
        android:layout_margin="10dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:id="@+id/viewPriority"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:textSize="17sp"
                android:maxLines="1"
                android:id="@+id/notesTitle"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TESaslkjdalksdjlkasdjlkasdlkjaslkd alksjflkasjdlkasjdlka jskldjalk sjd laksjdlk asjdlkasjdlkasjlkdajslkdjalksT"
                android:textSize="18sp"
                android:id="@+id/notesSubTitle"
                android:layout_marginTop="5dp"
                android:textColor="#CFCFCF"
                android:fontFamily="@font/regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 Ocak 2000"
                android:id="@+id/notesDate"
                android:textSize="17sp"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"/>



        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>